<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WellDoneItXamFresh.Pages.ContextPage" Title="Context details">
  <StackLayout Orientation="Vertical">
    <StackLayout Orientation="Horizontal">
      <Label Text="Context Name: "/>
      <Entry Text="{Binding WellDoneItContext.Name}" MinimumWidthRequest="10" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
    <BoxView HeightRequest="30"></BoxView>
    <Button Text="Save" Command="{Binding SaveCommand}"></Button>
  </StackLayout>
</ContentPage>